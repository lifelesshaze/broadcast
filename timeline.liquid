{%- style -%}
  #IndexTimeline--{{ section.id }} .timeline__dot {
    /* Hide the default dot */
    background-color: transparent;
    /* Set the SVG as background image */
    background-image: url('{{ 'dot_indicator.svg' | asset_url }}');
    background-size: contain; /* Adjust as needed */
    background-repeat: no-repeat;
    max-height: 100%;
    width: 100%;
    height: var(--height);
  }

  #IndexTimeline--{{ section.id }} .timeline__dot__button {
    /* Remove any existing styling for the button */
    position: static;
    width: auto;
    height: auto;
    padding: 0;
    margin: 0;
    cursor: pointer;
  }

  #IndexTimeline--{{ section.id }} .timeline__dot__button:before {
    /* Remove the background color */
    background-color: transparent;
  }
{%- endstyle -%}
